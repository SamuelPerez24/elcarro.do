@model ElCarro.Web.Models.Suggestion

<div id="suggestions" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>¡Envianos tus sugerencias!</h4>
        @using (Html.BeginForm("SendSuggestion", "Suggestion", FormMethod.Post, new { @class = "col s12", role = "form", id = "SuggestionForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">perm_identity</i>
                    @Html.TextBoxFor(m => m.NameSug)
                    @Html.ValidationMessageFor(m => m.NameSug, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.NameSug, "Nombre")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    @Html.TextBoxFor(m => m.EmailSug)
                    @Html.ValidationMessageFor(m => m.EmailSug, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.EmailSug, "Correo Electrónico")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">mode_edit</i>
                    @Html.TextAreaFor(m => m.SuggestionMsj, new { @class = "materialize-textarea" })
                    @Html.ValidationMessageFor(m => m.SuggestionMsj, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.SuggestionMsj, "Sugerencias")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 center">
                    <button class="btn waves-effect waves-light" type="submit">Enviar</button>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    SumitForm("SuggestionForm");
</script>
