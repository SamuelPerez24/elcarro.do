@model ElCarro.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Cambia tu contraseña</span>
                        <div class="row">
                            <section id="resetPasswordForm">
                                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal col s12", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Code)
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">perm_identity</i>
                                            @Html.TextBoxFor(m => m.Name)
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                            @Html.LabelFor(m => m.Name, "Nombre de usuario o compañia")
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            @Html.PasswordFor(m => m.Password, new { @required = true })
                                            @Html.LabelFor(m => m.Password, "Contraseña")
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @required = true })
                                            @Html.LabelFor(m => m.ConfirmPassword, "Verificar Contraseña")
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12 center">
                                            <button class="btn waves-effect waves-light" type="submit" name="Register">Cambiar</button>
                                        </div>
                                    </div>
                                }
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
