@using ElCarro.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Loguearse";
}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Accede a tu cuenta</span>
                        <div class="row">
                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal col s12", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">email</i>
                                            @Html.TextBoxFor(m => m.UserName)
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                            @Html.LabelFor(m => m.UserName, "Correo Electrónico")
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            @Html.PasswordFor(m => m.Password)
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            @Html.LabelFor(m => m.Password, "Contraseña")
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12 center">
                                            <button class="btn waves-effect waves-light" type="submit">Iniciar sesión</button>
                                        </div>
                                        <div class="input-field col s12 center">
                                            @Html.ActionLink("Olvido su contraseña?", "ForgotPassword", routeValues: null, htmlAttributes: new { @class = "waves-effect waves-light btn" })
                                        </div>
                                    </div>
                                }
                            </section>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">¿Aun no tienes una cuenta?</span>
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <div class="input-field col s12 m6 center">
                                <a class="waves-effect waves-light btn" href="@Url.Action("Register", "Account")">Usuario</a>
                            </div>
                            <div class="input-field col s12 m6 center">
                                <a class="waves-effect waves-light btn" href="@Url.Action("RegisterCompany", "Account")">Empresa</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
