<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <title>@ViewBag.Title - ElCarro.do</title>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar  -->
    <div class="navbar-fixed">
        <nav class="white" role="navigation">
            <div class="nav-wrapper">
                <div class="row">
                    <div class="col m4 center">
                        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
                        <a id="logo-container" href="/" class="brand-logo"><img class="responsive-img " src="~/Images/logo_elcarro_navbar_resized.png"></a>
                    </div>
                    <div class="col m8">
                        <ul class="right hide-on-med-and-down">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
                <ul id="nav-mobile" class="side-nav">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="section">
            @RenderBody()
        </div>
    </div>

    <!-- Modal Structure -->
    @{ Html.RenderAction("PrivacyPolicy", "Modals"); }

    @{ Html.RenderAction("TermsConditions", "Modals"); }

    @{ Html.RenderAction("Rules", "Modals"); }

    @{ Html.RenderAction("Suggestions", "Modals"); }

    @{ Html.RenderAction("BugsReport", "Modals"); }

    <!-- Footer  -->
    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">¿Quienes somos?</h5>
                    <p class="grey-text text-lighten-4">Somos un equipo de estudiantes universitarios enfocados en ayudar... #TO-DO</p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Settings</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Ayuda</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#rules">Reglas</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#privacy_policy">Politica de privacidad</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#terms_conditions">Términos y condiciones</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Connect</h5>
                    <ul>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#suggestions">Sugerencias</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#bugs_report">Reportar errores</a></li>
                        <li><a class="white-text" href="#!">Link 3</a></li>
                        <li><a class="white-text" href="#!">Link 4</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2016 ElCarro.do, Todos los derechos reservados.
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/materialize.js"></script>
    <script src="~/Scripts/init.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
