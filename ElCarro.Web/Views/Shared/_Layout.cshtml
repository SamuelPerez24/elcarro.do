<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <title>@ViewBag.Title - ElCarro.do</title>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @*<link href="~/Content/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
        <link href="~/Content/style.css" type="text/css" rel="stylesheet" media="screen,projection" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar  -->
    <div class="navbar-fixed">
        <nav class="white" role="navigation">
            <div class="nav-wrapper container">
                <a id="logo-container" href="index.html" class="brand-logo">ElCarro.do</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="#"><i class="material-icons left">search</i>Buscar pieza</a></li>
                    <li><a href="#"><i class="material-icons left">perm_identity</i>Mi Cuenta</a></li>
                    <li><a href="#"><i class="material-icons left">help</i>Ayuda</a></li>
                    <li><a class="waves-effect waves-light btn">Publicar</a></li>
                </ul>

                <ul id="nav-mobile" class="side-nav">
                    <li><a class="center" href="#">Buscar pieza</a></li>
                    <li><a class="center" href="#">Mi Cuenta</a></li>
                    <li><a class="center" href="#">Ayuda</a></li>
                    <li><a class="waves-effect waves-light btn">Publicar</a></li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="section">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    @{ Html.RenderAction("PrivacyPolicy", "Modals"); }

    @{ Html.RenderAction("TermsConditions", "Modals"); }

    @{ Html.RenderAction("Rules", "Modals"); }

    @{ Html.RenderAction("Suggestions", "Modals"); }

    @{ Html.RenderAction("BugsReport", "Modals"); }

    <!-- Footer  -->
    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">¿Quienes somos?</h5>
                    <p class="grey-text text-lighten-4">Somos un equipo de estudiantes universitarios enfocados en ayudar... #TO-DO</p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Settings</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Ayuda</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#rules">Reglas</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#privacy_policy">Politica de privacidad</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#terms_conditions">Términos y condiciones</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Connect</h5>
                    <ul>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#suggestions">Sugerencias</a></li>
                        <li><a class="white-text modal-trigger waves-effect waves-light" href="#bugs_report">Reportar errores</a></li>
                        <li><a class="white-text" href="#!">Link 3</a></li>
                        <li><a class="white-text" href="#!">Link 4</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Made by <a class="brown-text text-lighten-3" href="https://github.com/rozon">rozon</a><img src="~/Images/GitHub-Mark-32px.png">
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/materialize.js"></script>
    <script src="~/Scripts/init.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
